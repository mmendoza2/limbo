<%	 if signed_in? %>
    <%	place = ActiveSupport::JSON.decode(open("https://graph.facebook.com/#{@micrositio.referencefb}?fields=picture.width(250),photos,likes,hours,name,posts,location,were_here_count,talking_about_count,description&access_token=#{current_user.oauth_token}").read) %>
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-6 col-xs-12">
          <div class="img-responsive">
            <%	 if place['picture'].nil?  %>
            <%	else  %>
                <div class="img-responsive" style="height: 300px; overflow: hidden">
                  <%= image_tag(place['picture']['data']['url'])   %>
                </div>
            <%	end  %>
          </div>
        </div>
        <div class="col-md-6 col-xs-12">
          <div class="row">
          <h1> <%= place['name']	  %></h1>
          </div>
          <div class="row">
          <h4> <%= place['location']['street']	  %></h4>
          <h4> <%= place['location']['city']	  %></h4>
          <h4> <%= place['location']['country']	  %></h4>
          </div>
          <div class="row">
            <h5> <p style="font-weight: bold; font-size: 16px"> <%= place['were_here_count']  %>   persons where here.</p> </h5>
            <h5> <p style="font-weight: bold; font-size: 16px"> <%= place['talking_about_count']  %>   are talking about this place.</p> </h5>
            <h5> <p style="font-weight: bold; font-size: 16px"> <%= place['likes']  %>  likes in Facebook.</p> </h5>

          </div>
          <div class="col-md-6" style="padding-top: 40px">
            <%= render 'follow_form' if signed_in? %>


          </div>
        </div>

      </div>
      <div class="row">
        <div class="col-md-8 col-xs-12">
          <br/>
            <h2>Description</h2>
            <p> <%= place['description']	  %></p>
        </div>
        <div class="col-md-4 col-xs-12">
          <br/>
          <%	 if place['hours'].nil?  %>
          <%	else  %>
          <h2>Hours</h2>
         <% place['hours'].each do |x|  %>
         <%= x  %>
              <br/>
         <% end %>
         <% end %>
        </div>
      </div>
      <div class="row" style="margin-top: 20px">
        <div class="col-md-6 col-xs-12">
            <div class="row">
              <%	 if place['photos'].nil?  %>
              <%	else  %>
                  <h2>Recently photos</h2>
                  <% place['photos']['data'].first(4).each do |x|  %>
                      <ul >
                        <li>
                      <div class="img-responsive" style="overflow: hidden; width: 300px">
                        <%= image_tag(x['source'])  %>
                      </div>
                          <%= x['from']['name']  %>
                        </li>
                      </ul>
                  <%	end  %>
              <%	end  %>
            </div>
            <div class="row">
                <div class="fb-comments" data-href="<%=request.original_url%>" data-numposts="10" data-width= "280"></div>
            </div>
        </div>
        <div class="col-md-6 col-xs-12">
          <%	 if place['posts'].nil?  %>
          <%	else  %>
              <h2>Posts</h2>
          <% place['posts']['data'].first(6).each do |x|  %>
              <div class="row">
                 <div class="col-md-4 col-xs-4">
                   <div class="img-responsive" style="overflow: hidden; height: 100px">
                    <%= image_tag(x['picture'])  %>
                   </div>
                 </div>
                <div class="col-md-8 col-xs-8">
                  <%= x['message']  %>
                </div>
              </div>
              <br/>
              <br/>
          <% end %>
          <% end %>
        </div>
      </div>

    </div>

<% else %>
    <%=	 render "shared/ingresa" %>
<% end %>







