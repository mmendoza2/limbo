

<div class="container" style="margin-top: 30px">

  <div class="row">
    <div class="col-md-6">
      <a href="<%=	root_path  %>"> <img src="https://s3.amazonaws.com/imagenes.notelimites/ntl-logo.png" style="width: 400px; margin-bottom: 20px"> </a>
    </div>
  </div>


  <div class="col-md-6 col-md-offset-3" style="margin-bottom: 200px">
    <div class="login-form-wrap-center">
      <h1 class="sign-up-header">Olvidaste tu Password</h1>
      <div class="wrapper-form">
        <section class="wrapper-facebook">
          <div id="user-widget">

            <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
              <%= devise_error_messages! %>

              <div><%= f.label :email %><br />
              <%= f.email_field :email, :autofocus => true %></div>

              <div><%= f.submit "Send me reset password instructions" %></div>
            <% end %>

            <%= render "devise/shared/links" %>

          </div>

        </section>





      </div>
    </div>
  </div>
</div>




