

<% provide(:title, "Sign in") %>

<header id="header" class="site-header">
  <div class="container">
    <div class="row-fluid">
      <div class="span12">
        <h1><div class="site-title pull-left"> <%= link_to image_tag("LogoNTL.png"), root_path, id: "logo" %></div></h1>
        <div class="user text-right">
          <ul>
            <li class="user-login" ><%= link_to "Login", new_user_session_path %></li> |
            <li class="user-regidter" ><%= link_to "Registrate", new_user_registration_path %></li>
          </ul>
        </div>
        <div class="text-center" >
          <br>
          <br>
                  <h2 style="color: #ffffff; font-weight: 300; font-size: 50px">Ingresa a NoTeLimites.com</h2>
          <br/>
        <div class="wrapper-form">
                <section class="text-center">
                        <%= link_to "FACEBOOK", user_omniauth_authorize_path(:facebook), class: "btn btn-large btn-primary" %>
                  <div class="row-fluid" >
                    <div class="span8 offset4" >
                      <div class="sign-up-divider">
                      </div>
                      <p>
                      <br>
                        <h2 style="color: #ffffff; font-weight: 100;">Ã“ Ingresa con tu Email</h2>
                            <% flash.each do |key, value| %>
                              <div class="alert alert-<%= key %>"><%= value %></div>
                             <% end %>
                      <br>
                      </p>
                        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

                          <div><%= f.email_field :email, :autofocus => true,  :placeholder => "Email" %></div>
                          <div><%= f.password_field :password,  :placeholder => "Password" %></div>
                          <% if devise_mapping.rememberable? -%>
                            <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
                          <% end -%>
                          <div><%= f.submit "Ingresa", class: 'btn' %></div>
                        <% end %>
                      <%= render "devise/shared/links" %>
                      <br>
                      <br>
                      <br>
                      <br>

                    </div>
                  </div>
                </section>
        </div>
        </div>
      </div>
    </div>
  </div><!-- /span12 -->


</header>

