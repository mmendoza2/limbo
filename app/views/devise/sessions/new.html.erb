<div class="front-bg">
  <img class="front-image" src="https://s3.amazonaws.com/imagenes.notelimites/TURISMO_MEXICO.JPG" width="800px" height="703px">
</div>

<% provide(:title, "Sign in") %>

<div class="container">
  <div class="contenedorpagprincipal">
    <div class="login-form-wrap-center">
      <h1 class="sign-up-header">Ingresa a No Te Limites</h1>
      <br>
      <div class="wrapper-form">
        <section class="wrapper-facebook">
          <div id="user-widget">
            <% if current_user %>
                Welcome <strong><%= current_user.name %></strong>!
                <%= link_to "Sign out", signout_path, id: "sign_out" %>
            <% else %>
                <%= link_to "Ingresa con Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-large btn-primary" %>
            <% end %>
          </div>
          <div class="row" >
            <div class="span4 offset4" >
              <div class="sign-up-divider">
              </div>
              <p>
                <strong>O Ingresa con tu Email</strong>
              <br>
              </p>
                <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

                  <div><%= f.email_field :email, :autofocus => true,  :placeholder => "Email" %></div>
                  <div><%= f.password_field :password,  :placeholder => "Password" %></div>
                  <% if devise_mapping.rememberable? -%>
                    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
                  <% end -%>
                  <div><%= f.submit "Ingresa", class: 'btn' %></div>
                <% end %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </section>
        </div>
    </div>
  </div>
</div>


        <div class="footerpagprincipal">
          <div class="container">
            <%= render 'layouts/footer' %>
            <%= debug(params) if Rails.env.development? %>
          </div>
        </div>



