<% provide(:title, "Sign in") %>

<div class="container">
  <div class="contenedorpagprincipal">
    <div class="login-form-wrap-center">
      <h1 class="sign-up-header">Ingresa a No Te Limites</h1>
      <div class="wrapper-form">
        <section class="wrapper-facebook">
          <div id="user-widget">
            <% if current_user %>
                Welcome <strong><%= current_user.name %></strong>!
                <%= link_to "Sign out", signout_path, id: "sign_out" %>
            <% else %>
                <%= link_to "Ingresa con Facebook", "/auth/facebook", id: "sign_in", class: "btn btn-large btn-primary" %>
            <% end %>
          </div>
          <div class="row" >
            <div class="span6 offset3" >
              <p>
                <br>
                <strong>O Registrate con tu Email</strong>
              </p>

              <h2>Sign up</h2>

                <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>


                  <div> <%= f.text_field :name, :autofocus => true, :placeholder => "Nombre" %></div>

                  <div><%= f.email_field :email, :autofocus => true, :placeholder => "Email"%></div>

                  <div> <%= f.text_field :username, :placeholder => "Username" %></div>

                  <div><%= f.password_field :password, :placeholder => "Password"%></div>

                  <div> <%= f.password_field :password_confirmation, :placeholder => "Password confirmation" %></div>

                  <div class="field"><%= f.submit "Sign up" %></div>
                <% end %>

              <%= render "devise/shared/links" %>

            </div>
          </div>
        </section>





      </div>
    </div>
  </div>
</div>


<div class="footerpagprincipal">
  <div class="container">
    <%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
  </div>
</div>
