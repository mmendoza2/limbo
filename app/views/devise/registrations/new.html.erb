<div class="front-bg">
  <img class="front-image" src="https://s3.amazonaws.com/imagenes.notelimites/TURISMO_MEXICO.JPG" width="800px" height="703px">
</div>

<% provide(:title, "Sign in") %>

<div class="container">
  <div class="contenedorpagprincipal">
    <div class="login-form-wrap-center">
      <h1 class="sign-up-header">¡Únete a NoTeLimites hoy!</h1>
      <p> <br> </p>
      <div class="signup wrapper-form">
        <section class="wrapper-facebook">
          <div id="user-widget">
            <% if current_user %>
                Welcome <strong><%= current_user.name %></strong>!
                <%= link_to "Sign out", signout_path, id: "sign_out" %>
            <% else %>
                <%= link_to "Registrate con Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-large btn-primary" %>
            <% end %>
          </div>
          <div class="row" >
            <div class="span4 offset4" >
              <div class="sign-up-divider">
              </div>
              <h2>Ó registrate con tu Email </h2>

                <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>


                  <div> <%= f.text_field :name, :autofocus => true, :placeholder => "Nombre" %></div>

                  <div><%= f.email_field :email, :autofocus => true, :placeholder => "Email"%></div>

                  <div> <%= f.text_field :username, :placeholder => "Username" %></div>

                  <div><%= f.password_field :password, :placeholder => "Password"%></div>

                  <div> <%= f.password_field :password_confirmation, :placeholder => "Password confirmation" %></div>

                  <div class="field"><%= f.submit "Sign up", class: "btn" %></div>
                <% end %>


              <div>
                <p>
                  Dándole click a "Sign Up" se considera que estás de acuerdo con los Servicios de NoTeLimites. Por favor toma un tiempo para leer los <%= link_to "Terminos y Condiciones.", terminos_path %>
                </p>
              </div>
            </div>
          </div>


        </section>





      </div>
    </div>
  </div>
</div>


<div class="footerpagprincipal">
  <div class="container">
    <%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
  </div>
</div>
