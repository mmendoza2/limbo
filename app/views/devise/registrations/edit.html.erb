<% provide(:title, "Edit user") %>



<section>
  <h3> Selecciona tus preferencias  </h3>
  <ul class="nav nav-tabs nav-pills">

    <li class="<%= 'active' if params[:devise] == 'edit' %>"> <a href="/users/edit">PERFIL</a> </li>
    <li  class=<%= 'active' if params[:user] == 'editestados' %>><a href="/users/seleccionestados">Estados</a></li>
    <li  class=<%= 'active' if params[:user] == 'editactividades' %>><a href="/users/seleccionactividades">Actividades</a></li>
    <li  class=<%= 'active' if params[:user] == 'editlugares' %>><a href="/users/seleccionlugares">Lugares</a></li>
    <li  class=<%= 'active' if params[:user] == 'editusuarios' %>><a href="/users/seleccionusuarios">Usuarios</a></li>

  </ul>
</section>



<div class="row">
  <div class="span6 offset3">
    <h1>Configura tu PÃ©rfil</h1>

    <section>
      <%= render 'shared/avatar' %>
    </section>

    <%= form_for(@user, :html => { :multipart => true }) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
    <%= f.label :imagen %>
    <%= f.file_field :photo %>
        <%= f.submit "Sube tu foto de Perfil", class: "btn btn-large btn-primary" %>
    <% end %>


    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= collection_select(:estado, :estado_id, Estado.all, :id, :estado) %>
        <%= f.submit "Da click para Actualizar", class: "btn btn-large btn-primary" %>
    <% end %>




    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>




      <div><br />
      <%= f.email_field :email, :autofocus => true,  :placeholder => "Email" %></div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div> <i>(Dejalo en blanco si no lo quieres cambiar)</i><br />
      <%= f.password_field :password, :autocomplete => "off", :autofocus => true, :placeholder => "Password" %></div>

        <div><br />
      <%= f.password_field :password_confirmation, :placeholder => "Confirma tu Password" %></div>

      <% if f.object.encrypted_password.present? %>
        <div class="field"><i>(Necesitamos tu password actual por seguridad)</i><br />
          <%= f.password_field :current_password, :placeholder => "Password Actual" %></div>
      <% end %>


      <div><%= f.submit "Actualizar", class: 'btn' %></div>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Infeliz? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: 'btn'  %></p>

    <%= link_to "Back", :back%>


  </div>
</div>