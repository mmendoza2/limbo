<ul >

      <% @actividades.limit(20).order("RANDOM()").each do |x| %>



            <%  x.followers.limit(10).order("RANDOM()").each do |y|  %>
                      <div class="thumbnail">
                        <div class="caption">

                                      <div>
                                        <% if y.photo_file_name.blank?  %>
