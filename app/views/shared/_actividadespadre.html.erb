<ul >
  <% @actividadpadre.each do |actividad| %>

      <li class="actividadespadre">
       <div class="actividadespadretitulo"> <%= link_to actividad.actividad, actividad %> </div>
        <%= link_to image_tag(actividad.photo.url(:medium)), actividad, class: 'actividadespadreimagen'%>
        <div class="actividadespadrearticulo"><%=  actividad.descripcion %> </div>
        <div class="actividadespadrefollow">
          <div class="actividadespadrebarrafollow">
              <div class="actividadespadrefollow">
                  <div id="follow_form" >
                    <% if current_user.followingactividad?(actividad) %>
                        <%= form_for(current_user.relationactividades.find_by(followed_id: actividad), html: { method: :delete }) do |f| %>
                            <%= f.submit "Siguiendo", class: "btn " %>
                        <% end %>
                    <% else %>
                        <%= form_for(current_user.relationactividades.build(followed_id: actividad.id)) do |f| %>
                            <div><%= f.hidden_field :followed_id %></div>
                            <%= f.submit "Seguir", class: "btn  btn-primary" %>
                        <% end %>
                    <% end %>
                  </div>
              </div>
              <div class="actividadespadrecontador">
                <%= actividad.followers.count%>
                Usuarios

              </div>
          </div>

        </div>
      </li>


  <% end %>


</ul>