
<% if signed_in? %>



    <div class="row">
          <div class="col-md-10">
             <ul >
              <% @micrositios.take(10).each do |micrositio| %>
                  <% if micrositio.photo_file_size? %>
                        <li class="thumbnail col-md-3"  >
                           <%= image_tag micrositio.photo.url(:small) %>
                          <div class="caption">
                              <h3 style="overflow: scroll"> <%= link_to micrositio.name, micrositio %> </h3>
                              <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                          </div>
                        </li>
                  <% else %>
                        <li  class="thumbnail col-md-3">
                          <img src="https://s3.amazonaws.com/imagenes.notelimites/micrositios/photos/sitios/big/<%= micrositio.photo_file_name %>"  width="300px" height="100px" style="overflow: hidden"  >
                          <div class="caption">
                              <h3 style="overflow: scroll">  <%= link_to micrositio.name, micrositio %>  </h3>
                              <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                          </div>
                        </li>
                  <% end %>

              <% end %>
             </ul>
          </div>
          <div class="col-md-2">
            <p>...................................</p>
            <%=  link_to "Micrositios", controller: "micrositios", action:"index"  %>
            <p>...................................</p>
            <%=  link_to "Eventos", controller: "eventos", action:"index"  %>
            <p>...................................</p>
            <%=  link_to "Estados", controller: "estados", action:"index"  %>
            <p>...................................</p>
          </div>
        </div>


<% else %>




    <header id="header" class="site-header">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h1><div class="site-title pull-left"> <%= link_to image_tag("LogoNTL.png"), root_path, id: "logo" %></div></h1>
            <div class="user text-right">
              <ul>
              <li class="user-login" ><%= link_to "Login", new_user_session_path %></li> |
              <li class="user-regidter" ><%= link_to "Registrate", new_user_registration_path %></li>
              </ul>
            </div>
          </div><!-- /span12 -->
        </div><!-- /row-fluid -->
      </div><!-- /container -->

      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <% [:notice, :error, :alert].each do |level| %>
                <% unless flash[level].blank? %>
                    <div data-alert="alert" class="alert-message <%= flash_class(level) %> fade in">
                      <a class="close" href="#">×</a>
                      <%= content_tag :p, flash[level] %>
                    </div>
                <% end %>
            <% end %>

            <div class="header-description">
              <h2>NoTeLimites te ayudará a conocer México.</h2>
              <div class="header-btn"><%= link_to "Comienza a Explorar", new_user_registration_path %></div>
            </div><!-- /header-description -->

            <div class="header-features">
              <div class="row">
                <div class="header-feature">
                  <h3> &nbsp; Cuentanos tus intereses</h3>
                  <p>Nostros te recomendamos los mejores lugares a donde ir y las mejores cosas que hacer en México</p>
                </div>

                </div>
              </div>
            </div><!-- /header-features -->

          </div><!-- /span12 -->
        </div><!-- /row-fluid -->
      </div><!-- /container -->
    </header>




    <section id="features" class="features">
      <div class="container">
        <div class="row">

          <div class="col-md-3">
            <div class="feature">
              <i class="icon-globe icon-2x pull-left"></i>
              <h4>Descubre</h4>
              <p>Descubre todos los lugares, actividades y eventos que existen en México.</p>
            </div>
          </div><!-- /span3 -->

          <div class="col-md-3">
            <div class="feature">
              <i class="icon-wrench icon-2x pull-left"></i>
              <h4>Conoce</h4>
              <p>Conoce lugares que nunca antes habías visto.</p>
            </div>
          </div><!-- /span3 -->

          <div class="col-md-3">
            <div class="feature">
              <i class="icon-desktop icon-2x pull-left"></i>
              <h4>Disfruta</h4>
              <p>Disfruta todo lo que México tiene para ti</p>
            </div>
          </div><!-- /span3 -->

          <div class="col-md-3">
            <div class="feature">
              <i class="icon-thumbs-up icon-2x pull-left"></i>
              <h4>Comparte</h4>
              <p>Comparte con tus amigos todo lo que sabes acerca de México y sus lugares.</p>
            </div>
          </div><!-- /span3 -->
        </div><!-- /row-fluid -->
      </div><!-- /container -->
    </section>


<% end %>
